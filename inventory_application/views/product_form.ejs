<!DOCTYPE html>
<html>

<%- include("partials/head")  %>

<body>
  <%- include("partials/header")  %>
  <div class="main-wrapper">
    <%- include("partials/navigation")  %>
    <main>
      <h2><%= title %></h2>
      <form
        action=""
        method="POST"
      >
        <div class="block">
          <label for="name">Name <span class="star">*</span></label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="name..."
            value="<%- typeof nameValue === 'undefined' ? "" : nameValue %>"
          >
          <div class="input-errors">
            <% errors.map(error => { %>
            <% if (error.path === "name") { %>
            <div class="input-error"><%= error.msg %></div>
            <% } %>
            <% }) %>
          </div>
        </div>
        <div class="block">
          <label for="description">Descrtion</label>
          <textarea
            id="description"
            name="description"
            placeholder="description..."
            rows="10"
          ><%- typeof descriptionValue === 'undefined' ? "" : descriptionValue %></textarea>
          <div class="input-errors">
            <% errors.map(error => { %>
            <% if (error.path === "description") { %>
            <div class="input-error"><%= error.msg %></div>
            <% } %>
            <% }) %>
          </div>
        </div>
        <div class="block">
          <label for="category">Category <span class="star">*</span></label>
          <select
            name="category"
            id="category"
          >
            <option value="">--No category--</option>
            <% categories.forEach(cat=> { %>
            <option
              value="<%= cat.name%>"
              <% if (typeof cat !== 'undefined') { %>
              <%= selectedCategory === cat.name ? 'selected' : ""%>
              <% } %>
            ><%= cat.name%></option>
            <%}) %>
          </select>
          <div class="input-errors">
            <% errors.map(error => { %>
            <% if (error.path === "category") { %>
            <div class="input-error"><%= error.msg %></div>
            <% } %>
            <% }) %>
          </div>
        </div>
        <div class="block">
          <label for="price">Price</label>
          <input
            type="number"
            step="0.01"
            id="price"
            name="price"
            value="<%= typeof priceValue === 'undefined' ? "" : priceValue %>"
          >
          <div class="input-errors">
            <% errors.map(error => { %>
            <% if (error.path === "price") { %>
            <div class="input-error"><%= error.msg %></div>
            <% } %>
            <% }) %>
          </div>
        </div>
        <div class="block">
          <label for="numberInStock">Number in stock</label>
          <input
            type="text"
            id="numberInStock"
            name="numberInStock"
            value="<%= typeof numberInStockValue === 'undefined' ? "" : numberInStockValue %>"
          >
          <div class="input-errors">
            <% errors.map(error => { %>
            <% if (error.path === "numberInStock") { %>
            <div class="input-error"><%= error.msg %></div>
            <% } %>
            <% }) %>
          </div>
        </div>
        <button type="submit">Submit</button>
      </form>
    </main>
  </div>
  <%- include("partials/footer")  %>
</body>

</html>