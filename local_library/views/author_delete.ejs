<!DOCTYPE html>
<html>
<%- include('partials/head', {title: title}); %>

<body>
  <main>
    <%- include('partials/sidebar'); %>
    <div class="content">
      <h1>
        <%= title %>:
        <%= author.name %>
      </h1>
      <% if (author.birth_date) { %>
      <p>(<%= author.birth_date %> - <%= author.death_date %>)</p>
      <% } else { %>
      <p>( Unknown )</p>
      <% } %>
      <% if (author_books.length > 0) { %>
      <p>Delete the following books before attempting to delete this author.</p>
      <h2>
        Books
      </h2>
      <% author_books.forEach(book=> { %>
      <ul>
        <li>
          <a href="<%= book.url %>"><%= book.title %></a>
          <p><%= book.summary %></p>
        </li>
      </ul>
      <%}) %>
      <% } else { %>
      <p>Do you really want to delete this Author?</p>
      <form
        action=""
        method="POST"
      >
        <input
          type="hidden"
          id="<%= author._id %>"
          name="authorid"
          value="<%= author._id %>"
          required
        >
        <button type="submit">Delete</button>
      </form>
      <% } %>
    </div>
  </main>
</body>

</html>