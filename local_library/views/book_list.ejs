<!DOCTYPE html>
<html>
<%- include('partials/head', {title: title}); %>

<body>
  <main>
    <%- include('partials/sidebar'); %>
    <div class="content">
      <h1>
        <%= title %>
      </h1>
      <% book_list.forEach(book=> { %>
      <ul>
        <li>
          <a href="<%= book.url %>">
            <%= book.title %>
          </a>
          <span>(<%= book.author.name %>)</span>
        </li>
      </ul>
      <%}) %>
      <% if (!book_list) { %>
      <h2>There are no book</h2>
      <% } %>
    </div>
  </main>
</body>

</html>