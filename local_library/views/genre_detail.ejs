<!DOCTYPE html>
<html>
<%- include('partials/head', {title: title}); %>

<body>
  <main>
    <%- include('partials/sidebar'); %>
    <div class="content">
      <h1>
        <%= title %>
      </h1>
      <h2>
        <%= genre %>
      </h2>
      <% genre_books.forEach(book=> { %>
      <ul>
        <li>
          <a href="<%= book.url %>">
            <%= book.title %>
          </a>
          <p><%= book.summary %></p>
        </li>
      </ul>
      <%}) %>
      <% if (!genre_books) { %>
      <h2>There are no books</h2>
      <% } %>
    </div>
  </main>
</body>

</html>